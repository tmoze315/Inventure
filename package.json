{
    "name": "inventure",
    "version": "1.0.0",
    "description": "Adventure game for Discord",
    "main": "src/index.ts",
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "ignore": [
            ""
        ],
        "delay": "3",
        "execMap": {
            "ts": "ts-node"
        }
    },
    "scripts": {
        "start": "npm run tsc && node ./dist/index.js",
        "watch": "npm run tsc && npx tsc-watch --onSuccess \"node ./dist/index.js\"",
        "watch2": "npm run tsc && npx nodemon ./dist/index.js",
        "tsc": "tsc",
        "test:coverage": "ENV_FILE=./.env.test jest --maxWorkers=4 --verbose --coverage",
        "test": "ENV_FILE=./.env.test jest --verbose --maxWorkers=4"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@stdlib/stdlib": "0.0.92",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^14.11.2",
        "bufferutil": "^4.0.1",
        "date-fns": "^2.16.1",
        "discord.js": "^12.3.1",
        "dotenv": "^8.2.0",
        "erlpack": "github:discord/erlpack",
        "mongoose": "^5.10.6",
        "typescript": "^4.0.3",
        "utf-8-validate": "^5.0.2",
        "zlib-sync": "^0.1.7"
    },
    "devDependencies": {
        "@types/jest": "^26.0.14",
        "@types/mongodb-memory-server": "^2.3.0",
        "jest": "^26.5.2",
        "jest-discordjs-mocks": "^1.0.2",
        "mongodb-memory-server": "^6.9.2",
        "nodemon": "^2.0.4",
        "ts-jest": "^26.4.1",
        "tsc-watch": "^4.2.9"
    }
}